{
	"name": "BinarySourceFileStore",
	"properties": {
		"description": "Connection to your source data store.",
		"linkedServiceName": {
			"referenceName": "ADLS",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"container": {
				"type": "string",
				"defaultValue": "source"
			},
			"directory": {
				"type": "string",
				"defaultValue": "UserRegion"
			}
		},
		"annotations": [],
		"type": "Binary",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"folderPath": "@dataset.directory",
				"fileSystem": "@dataset.container"
			}
		}
	}
}